\pgfkeys{
  /CJN/color/block/.cd,
    .is choice,
    transparent/.code=\@CJN@block@transparent,
    fill/.code=\@CJN@block@fill,
}

\pgfkeys{
  /CJN/color/background/.cd,
    .is choice,
    dark/.code=\@CJN@colors@dark,
    light/.code=\@CJN@colors@light,
}

\newcommand{\@CJN@color@setdefaults}{
  \pgfkeys{/CJN/color/.cd,
    background=light,
    block=transparent,
  }
}

\newcommand{\@CJN@colors@dark}{
  \setbeamercolor{normal text}{%
    fg=white,
    bg=maincolour
  }
}

\newcommand{\@CJN@colors@light}{
  \setbeamercolor{normal text}{%
    fg=maincolour,
    bg=white,
  }
}

\setbeamercolor{palette primary}{%
  fg=white,
  bg=maincolour,
}

\setbeamercolor{titlelike}{%
  fg=white,
}

\setbeamercolor{frametitle}{%
  fg=white,
}

\setbeamercolor{section in toc}{%
	fg=maincolour,
}

\setbeamercolor{item}{%
	fg=maincolour,
}

\setbeamercolor{caption name}{%
	fg=maincolour,
}

\setbeamercolor{bibliography entry author}{%
	fg=maincolour,
}

\setbeamercolor{bibliography entry location}{%
	fg=maincolour,
}

\setbeamercolor{bibliography entry title}{%
	fg=maincolour,
}

\newcommand{\@CJN@block@transparent}{
  \setbeamercolor{block title}{use=normal text, parent=normal text}
}

\newcommand{\@CJN@block@fill}{
  \setbeamercolor{block title}{%
    use=normal text,
    fg=normal text.fg,
    bg=normal text.bg!80!fg
  }
}

\setbeamercolor{block title alerted}{%
    use={block title, alerted text},
    bg=block title.bg,
    fg=alerted text.fg
}

\setbeamercolor{block title example}{%
    use={block title, example text},
    bg=block title.bg,
    fg=example text.fg
}

\setbeamercolor{block body alerted}{use=block body, parent=block body}
\setbeamercolor{block body example}{use=block body, parent=block body}
\setbeamercolor{block body}{
  use={block title, normal text},
  bg=block title.bg!50!normal text.bg
}

\setbeamercolor{footline}{%
  bg=maincolour,
  fg=white
}
\setbeamercolor{author in head/foot}{%
  fg=fg!50!bg
}
\setbeamercolor{title in head/foot}{%
  fg=fg!50!bg
}
\setbeamercolor{date in head/foot}{%
  fg=fg!50!bg
}
\setbeamercolor{page number in head/foot}{%
  fg=green
}

\setbeamercolor{footnote}{fg=normal text.fg!90}
\setbeamercolor{footnote mark}{fg=.}

\@CJN@color@setdefaults

\ProcessPgfPackageOptions{/CJN/color}
